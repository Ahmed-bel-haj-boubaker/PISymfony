{% extends 'back.html.twig' %}


{% block main %}
<div class="card"  style=" padding-left:500px;">
    <div class="card-body">
    <h1>Localisation index</h1>

    <table class="table" >
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Lieux</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for localisation in localisations %}
            <tr>
                <td>{{ localisation.id }}</td>
                <td>{{ localisation.lieux }}</td>
                <td>				
                
                	<button  type="button" class="btn btn-secondary rounded-pill">

                    <a href="{{ path('app_localisation_show', {'id': localisation.id}) }}">list des localisation</a>
                    </button>
                                    	<button  type="button" class="btn btn-secondary rounded-pill">

                    <a href="{{ path('app_localisation_edit', {'id': localisation.id}) }}">update</a>
                                        </button>
<form method="post" action="{{ path('app_localisation_delete', {'id': localisation.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ localisation.id) }}">
    <button class="btn btn-secondary rounded-pill">Delete</button>

</form>                                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   	<button  type="button" class="btn btn-secondary rounded-pill">
  
                       <a href="{{ path('app_localisation_new') }}">Ajouter</a>
                                 </button>
 
</div>
{% endblock %}
