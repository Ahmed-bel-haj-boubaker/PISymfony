{% extends 'back.html.twig' %}

{% block main %}
<main id="main" class="main">
<section class="section">
    <div class="row">
      <div class="col-lg-12">

        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Liste des types d'évènements</h5>
            

            <!-- Table with stripped rows -->
            <table class="table datatable">
              <thead>
                <tr>
                  <th scope="col">id</th>
                  <th scope="col">type</th>
                  <th scope="col">supprimer</th>
                  <th scope="col">modifier</th>
                 
                </tr>
              </thead>
              {% for te in TypeEvent %}
              <tbody>
                <tr>
                  <th scope="row">{{ te.id }}</th>
                  <td>{{ te.NomType }}</td>
                  <td><form action="{{ path('deleteTypeEvent', {id:te.id}) }}">
                    <button  >supprimer</button>
                </form> </td>
                  <td><form action="{{ path('updateTypeEvent', {id:te.id}) }}">
                    <button  >modifier</button>
                </form></td>
                  
                </tr>
              </tbody>
             
              {% endfor %}

            </table>
            <form action="{{ path('createTypeEvent') }}">
              <button class="btn btn-primary mb-0 mt-3" >Ajouter un type d'événement</button>
          </form>
            <!-- End Table with stripped rows -->

          </div>
          
        </div>

      </div>
    </div>

  </section>

</main><!-- End #main -->
{% endblock %}
