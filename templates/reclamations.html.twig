{% extends "back.html.twig" %}
{% block content %}
    
    <div class="card">
        <div class="card-body">
            <table id="datatableDefault" class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            id
                                                                                        
                                                        
                        </th>
                        <th>
                            Sujet
                                                                                        
                                                        
                        </th>
                        <th>
                            Email
                                                                                        
                                                        
                        </th>
                        <th>
                            Description
                                                                                        
                                                        
                        </th>
                        <th>
                            Date
                                                                                        
                                                        
                        </th>
                        <th>
                            Category
                                                                                        
                                                        
                        </th>
                        <th>
                            User
                                                                                        
                                                        
                        </th>
                        <th>
                            Actions  
                                                                                  
                                                        
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for reclamation in reclamations %}
                        {% if reclamation.status == 0 %}
                         <tr  class="table-danger">
                            <td>
                                {{ reclamation.id }} 
                            </td>
                            <td>
                                {{ reclamation.sujet }}
                            </td>
                            <td>
                                {{ reclamation.email }}
                            </td>
                            <td>
                                {{ reclamation.description }}
                            </td>
                            <td>
                                {{ reclamation.date ? reclamation.date|date('Y-m-d H:i:s') : '' }}
                            </td>
                            <td>
                                {{ reclamation.category }}
                            </td>
                            <td>
                                {{ reclamation.user.username }}
                            </td>                  
                            <td>
                               <a href="{{ path('reclamation_reply', {'id': reclamation.id}) }}" class="fas fa-reply white"></a>
                                <a href="{{ path('reclamation_edit', {'id': reclamation.id}) }}" class="bi bi-pencil white"></a>
                                {{ include('reclamation/_delete_form.html.twig') }}

                            </a>
                            </td>
                        </tr>
                   
                               
                                {% else %}
                         <tr  class="table-success">
                            <td>
                                {{ reclamation.id }} 
                            </td>
                            <td>
                                {{ reclamation.sujet }}
                            </td>
                            <td>
                                {{ reclamation.email }}
                            </td>
                            <td>
                                {{ reclamation.description }}
                            </td>
                            <td>
                                {{ reclamation.date ? reclamation.date|date('Y-m-d H:i:s') : '' }}
                            </td>
                            
                            <td>
                                {{ reclamation.user.username }}
                            </td>                  
                            <td>
                               <a href="{{ path('app_reponse_new', {'id': reclamation.id}) }}" class="fas fa-reply white"></a>
                                <a href="{{ path('reclamation_edit', {'id': reclamation.id}) }}" class="bi bi-pencil white"></a>
                                {{ include('reclamation/_delete_form.html.twig') }}

                            </a>
                            </td>
                        </tr>
                   
                               {% endif %}
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="card-arrow">
            <div class="card-arrow-top-left"></div>
            <div class="card-arrow-top-right"></div>
            <div class="card-arrow-bottom-left"></div>
            <div class="card-arrow-bottom-right"></div>           
        </div>
    </div>
{% endblock %}
